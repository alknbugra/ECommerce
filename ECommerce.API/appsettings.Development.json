{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 200
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 2000
      }
    ],
    "AuthRules": [
      {
        "Endpoint": "POST:/api/auth/login",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "POST:/api/auth/register",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/auth/forgot-password",
        "Period": "1h",
        "Limit": 5
      }
    ],
    "ApiRules": [
      {
        "Endpoint": "POST:/api/products",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "PUT:/api/products/*",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "DELETE:/api/products/*",
        "Period": "1m",
        "Limit": 10
      }
    ]
  }
}
